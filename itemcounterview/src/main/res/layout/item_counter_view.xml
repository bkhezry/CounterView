<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/inc_dec_counter_view_background"
    android:padding="@dimen/inc_dec_counter_view_def_padding">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/dec_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:scaleX=".8"
        android:scaleY=".8"
        android:src="@drawable/ic_remove"
        app:backgroundTint="#37474F"
        app:fabSize="mini" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/inc_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:scaleX=".8"
        android:scaleY=".8"
        android:src="@drawable/ic_add"
        app:backgroundTint="#37474F"
        app:fabSize="mini" />

    <TextView
        android:id="@+id/item_counter_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

</RelativeLayout>